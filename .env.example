# Root environment for docker compose and scripts

# Ports
BACKEND_PORT=8080
FRONTEND_PORT=5173
FORWARD_DB_PORT=3307
FORWARD_REDIS_PORT=6379

# Backend (Laravel) env
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8080

# Database credentials (used by mysql service and Laravel)
DB_DATABASE=taskdb
DB_USERNAME=app
DB_PASSWORD=secret

# Frontend API base URL (baked into the frontend image at build time)
VITE_API_BASE_URL=http://localhost:8080/api

# Build behavior for scripts/dev-up.(fish|sh)
# Set to 1 or true to force docker compose build --no-cache
DEV_NO_CACHE=0

# Optional: customize as needed
# APP_ENV=production
# APP_DEBUG=false# Compose-level environment variables

# Backend app
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8080
# Generate a key and paste here (or run key:generate inside the container)
APP_KEY=

# Database (used by both mysql service and backend)
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=taskdb
DB_USERNAME=app
DB_PASSWORD=secret

# Ports exposed on host
BACKEND_PORT=8080
FRONTEND_PORT=5173
FORWARD_DB_PORT=3307
FORWARD_REDIS_PORT=6379

# Frontend -> Backend API URL (used at build time)
